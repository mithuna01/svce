<!DOCTYPE html>
<html ng-app="todoApp">
<head>
  <title>To-Do List</title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <style>
    ul {
      list-style-type: none;
      padding: 0;
    }
    li {
      margin-bottom: 5px;
    }
  </style>
</head>
<body>
<div ng-controller="TodoController">
  <h2>To-Do List</h2>
  <input type="text" ng-model="newTask" placeholder="Add new task">
  <button ng-click="addTask()">Add</button>
   <ul>
    <li ng-repeat="task in tasks">
      <input type="text" ng-model="task.name" ng-blur="updateTask(task)" ng-keypress="($event.which === 13) && updateTask(task)">
      <button ng-click="deleteTask(task)">Delete</button>
<button ng-click="editTask(task)">edit</button>
    </li>
  </ul>
</div>
<script>angular.module('todoApp', []).controller('TodoController', function($scope) {
    $scope.tasks = [
      {name: 'Task 1'},
      {name: 'Task 2'},
      {name: 'Task 3'}
    ];
  $scope.addTask = function() {
      if ($scope.newTask) {
        $scope.tasks.push({name: $scope.newTask});
        $scope.newTask = '';
      }
    };
$scope.updateTask = function(task) {
      task.editing = false;
    };
  $scope.deleteTask = function(task) {
      var index = $scope.tasks.indexOf(task);
      $scope.tasks.splice(index, 1);
    };
  });
</script>
</body>
</html>
